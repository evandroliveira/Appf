<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Padding="20" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Appf.MainPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Center">
                  <Image Source="logo.png"></Image>
                <Entry Text="{Binding Email}" Placeholder="e-mail"></Entry>
                <Entry Text="{Binding Senha}" Placeholder="senha!" IsPassword="true"></Entry>
                    
               <StackLayout Orientation="Horizontal" HorizontalOptions="End"> 
                    
                    <Button Text="CANCELAR" BackgroundColor="Yellow" TextColor="Black" Command="{Binding EntrarCommand}"></Button>
                   <Button Text="ENTRAR" BackgroundColor="Green" TextColor="Black" Command="{Binding EntrarCommand}"></Button>
                   
                        
               </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
